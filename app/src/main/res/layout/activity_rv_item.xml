<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--text view for our activity name-->
        <TextView
            android:id="@+id/idTVActivityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Activity Name"
            android:textColor="@color/black" />


        <!--text view for our activity date-->
        <TextView
            android:id="@+id/idTVActivityDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Date"
            android:textColor="@color/black" />

        <!--text view for our location-->
        <TextView
            android:id="@+id/idTVActivityLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Location"
            android:textColor="@color/black" />

        <!--text view for our activity time-->
        <TextView
            android:id="@+id/idTVActivityTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Time"
            android:textColor="@color/black" />

        <!--text view for our activity reporter-->

        <TextView
            android:id="@+id/idTVActivityReporter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Reporter name"
            android:textColor="@color/black" />

        <!--text view for our activity description-->

        <TextView
            android:id="@+id/idTVActivityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Add description"
            android:textColor="@color/black" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
